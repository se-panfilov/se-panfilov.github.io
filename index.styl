label_photo_height = 300px
sub_bar_bg_color = white

.index_page
  .label_photo
    height label_photo_height
    width 100%
    background-color #2DAAC0
    position relative
    padding 0
    margin 0
    background-image url('../img/bg.jpg')
    background-repeat no-repeat
    background-size cover
  .sub_bar
    background-color sub_bar_bg_color
    width 100%
    .sub_bar_items
      width 100%
      margin 0
      padding 0
      height 110px
      list-style none
      .item
        margin 0
        display inline-block
        width 50%
        text-align center
        line-height 110px
        font-size 1.2em
        a
          color #666
          text-decoration none
          padding 15px
        h1, h2, h3, h4, h5, h6, h7
          margin 0


