.index-page
  .header
    background-color #eeeeee
    border-bottom solid 1px #e5e5e5

    .bloc-logo
      position: relative
      width: 130px
      height: 49px
      float: left

      .canvas, .bloc-logo, .logo-mask
        display: block
        width: 130px
        height: 49px

      .logo-mask
        position: absolute
        top: 0
        left: 0
        background-size: 130px
        background-image: url("../img/logo-mask.png")
        text-indent: -9999px
