contact_item_width = 33%
items_in_row = 3

.contacts_list
  list-style none
  margin 0
  padding 0
  width contact_item_width * items_in_row
  .contact_item
    display inline-block
    width contact_item_width

    .contact_icon
      font-size 24px
      line-height 52px
    .contact_link
      color #4f5458